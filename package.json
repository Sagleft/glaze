{
  "name": "glaze",
  "version": "0.3.1",
  "description": "A simple and fast P2P voice chat for gaming",
  "main": "main.js",
  "scripts": {
    "pack": "build --dir",
    "distwindows": "build -w",
    "distlinux": "build -l",
    "distmac": "build -m",
    "dist": "build -mwl",
    "start": "electron .",
    "temp": "build -w --ia32"
  },
  "repository": "https://github.com/adamsiwiec/glaze",
  "author": "Adam Siwiec",
  "license": "MIT",
  "devDependencies": {
    "css-loader": "^0.26.1",
    "devtron": "^1.4.0",
    "electron": "^1.5.0",
    "electron-builder": "^11.2.0",
    "electron-dl": "^1.6.0",
    "electron-packager": "^8.5.0",
    "file-loader": "^0.9.0",
    "image-webpack-loader": "^3.1.0",
    "node-sass": "^4.1.1",
    "postcss-loader": "^1.2.1",
    "read-installed": "^4.0.3",
    "resolve-url-loader": "^1.6.1",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "electron-builder-squirrel-windows": "^12.3.0"

  },
  "build": {
    "appId": "com.adamsiwiec.glaze",
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "tar.gz"
    }
  },
  "dependencies": {
    "jquery": "^3.1.1"
  }
}
